---
const {title, description} = Astro.props;
---

<header class="-bg-linear-210 from-[var(--azul-primario)] to-[var(--azul-claro)] text-white">
        <div class="container mx-auto px-6 py-12">
            <nav class="mb-8">
                <a href="/" class="inline-flex items-center text-white hover:text-gray-200 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Volver a Costly
                </a>
            </nav>
            <div class="max-w-4xl">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
                <p class="text-xl text-blue-100">{description}</p>
            </div>
        </div>
    </header>