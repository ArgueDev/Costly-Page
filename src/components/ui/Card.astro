---
import { Icon } from 'astro-icon/components';

const {title, icon, description} = Astro.props;
---

<div class="flex flex-col items-center rounded-2xl w-96 bg-white shadow-xl p-8">
    <Icon name={icon} class="w-23 h-26 bg-radial from-[var(--azul-primario)] to-[var(--azul-claro)] p-4 rounded-full text-white"/>
    <h3 class="text-2xl font-bold my-4">{title}</h3>
    <p class="text-center text-gray-500 font-medium">{description}</p>
</div>